                    <TableColumn fx:id="colTechnicien" prefWidth="150" text="Technicien" />
                    <TableColumn fx:id="colNotes" prefWidth="200" text="Notes" />
                    <TableColumn fx:id="colVehicule" prefWidth="150" text="Véhicule" />
                    <TableColumn fx:id="colGarage" prefWidth="150" text="Garage" />
                </columns>
            </TableView>
