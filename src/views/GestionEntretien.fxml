<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GestionEntretienController">
    <top>
        <ToolBar>
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Gestion des Entretiens" />
