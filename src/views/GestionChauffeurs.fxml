<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GestionChauffeursController">
    <top>
        <ToolBar>
            <Label text="Gestion des Chauffeurs" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        </ToolBar>
        <HBox alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button onAction="#ajouterChauffeur" text="Ajouter un chauffeur" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <!-- TableView pour afficher les chauffeurs -->
            <TableView fx:id="tableViewChauffeurs" prefHeight="300" prefWidth="600">
                <columns>
                    <TableColumn text="CIN" fx:id="colCin" prefWidth="100" />
                    <TableColumn text="Nom" fx:id="colNom" prefWidth="150" />
                    <TableColumn text="Prénom" fx:id="colPrenom" prefWidth="150" />
                    <TableColumn text="Disponibilité" fx:id="colDisponibilite" prefWidth="100" />
                </columns>
            </TableView>

            <!-- Formulaire caché -->
            <VBox fx:id="formulaireAjout" visible="false" spacing="10">
                <TextField fx:id="tfCin" promptText="CIN" />
                <TextField fx:id="tfNom" promptText="Nom" />
                <TextField fx:id="tfPrenom" promptText="Prénom" />
                <CheckBox fx:id="cbDisponibilite" text="Disponible" />
                <Button text="Ajouter" onAction="#ajouterChauffeur" />

            </VBox>
        </VBox>
    </center>
</BorderPane>
