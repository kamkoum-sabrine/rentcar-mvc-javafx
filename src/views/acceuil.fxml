    <center>
        <StackPane fx:id="contentArea" style="-fx-background-image: url('src/ressources/images/bgimage.jpg'); -fx-background-size: cover;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
