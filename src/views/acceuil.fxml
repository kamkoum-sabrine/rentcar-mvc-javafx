                        <TableColumn fx:id="colChauffeurs" prefWidth="200" text="Nombre de chauffeurs" />
                        <!-- Colonne pour le nombre de locations -->
                        <TableColumn fx:id="colLocations" prefWidth="200" text="Nombre de locations" />
                    </columns>
                </TableView>




            </VBox>
        </StackPane>


    </center>
   
