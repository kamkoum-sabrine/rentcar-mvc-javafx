        <GridPane alignment="CENTER" hgap="10.0" maxHeight="150.0" maxWidth="300.0" prefHeight="32.0" prefWidth="300.0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10;                           -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.5, 0, 5);" vgap="4.0">
