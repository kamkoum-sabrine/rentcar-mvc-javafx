<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="contentArea" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.GestionVehiculesController">
    <!-- Contenu par défaut ou une zone vide -->
   <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20; -fx-background-color: #f4f4f4;" xmlns:fx="http://javafx.com/fxml">
   

    <Label styleClass="title-label" text="Gestion des Véhicules" textFill="#205072">
         <font>
            <Font name="SimSun" size="36.0" />
         </font></Label>
    <Button style="-fx-background-color: #329D9C;" styleClass="btn-ajouter" text="Ajouter une véhicule" textFill="WHITE">
         <font>
            <Font name="SimSun" size="28.0" />
         </font></Button>
    <Button style="-fx-background-color: #329D9C;" styleClass="btn-modifier" text="Modifier une véhicule" textFill="WHITE">
         <font>
            <Font name="SimSun" size="26.0" />
         </font></Button>
    <Button style="-fx-background-color: #329D9C;" styleClass="btn-supprimer" text="Supprimer une véhicule" textFill="WHITE">
         <font>
            <Font name="SimSun" size="26.0" />
         </font></Button>
</VBox>
</StackPane>
