<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>

<StackPane  fx:controller="controllers.LoginController" xmlns:fx="http://javafx.com/fxml">
    <!-- MediaView pour afficher la vidÃ©o -->
    <MediaView fx:id="backgroundVideo" preserveRatio="false" />
    <GridPane alignment="CENTER" hgap="10" vgap="10" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
           <Label text="Nom d'utilisateur:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
           <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
           <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
           <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
           <Button text="Se connecter" onAction="#handleLogin" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
       </GridPane>
</StackPane>
