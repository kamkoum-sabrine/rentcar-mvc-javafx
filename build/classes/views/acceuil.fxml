<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AcceuilController">
    <!-- MediaView pour afficher la vidéo -->
    <MediaView fx:id="backgroundImage" preserveRatio="true" />

<BorderPane>
    
    <!-- Navbar en haut avec des boutons -->
    <top>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
            <Button text="Véhicules" onAction="#showGestionVehicules" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button text="Clients" onAction="#showGestionClients" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button text="Locations" onAction="#showGestionLocations" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button text="Factures" onAction="#showGestionFactures" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button text="Assurances" onAction="#showGestionAssurances" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button text="Garage" onAction="#showGestionGarage" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button text="Entretien" onAction="#showGestionEntretien" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
        </HBox>
    </top>

    <!-- Contenu central -->
        <!-- Zone de contenu principal -->
    <center>
      <!-- Contenu central -->
    <StackPane fx:id="contentArea" style="-fx-background-image: url('src/ressources/images/bgimage.jpg'); -fx-background-size: cover;">
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
            <!-- Titre des statistiques -->
            <Label text="Statistiques générales" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <!-- Zone des statistiques -->
            <GridPane alignment="CENTER" hgap="20" vgap="20">
                <Label text="Nombre total de véhicules :" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <Label fx:id="statTotalVehicules" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Nombre total de clients :" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <Label fx:id="statTotalClients" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Nombre total de locations :" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <Label fx:id="statTotalLocations" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </GridPane>
        </VBox>
    </StackPane>
    </center>
   
</BorderPane>
</StackPane>